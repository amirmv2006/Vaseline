<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <groupId>ir.amv.os.vaseline.parents.spring</groupId>
        <artifactId>vaseline-parents-springboot-itest-parent</artifactId>
        <version>2.0-SNAPSHOT</version>
        <relativePath>../../../vaseline-parents-parent/vaseline-parents-springboot/vaseline-parents-springboot-itest-parent</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>ir.amv.os.vaseline.data.spring</groupId>
    <artifactId>vaseline-data-spring-jpa-itest</artifactId>

    <dependencies>
        <dependency>
            <groupId>ir.amv.os.vaseline.data.spring</groupId>
            <artifactId>vaseline-data-basic-spring-jpa</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>ir.amv.os.vaseline.data.spring</groupId>
            <artifactId>vaseline-data-advanced-search-spring-jpa</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <!-- test dependencies -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${project.build.sourceDirectory}/ir/amv/os/vaseline/data/jpa/spring/itest</directory>
                            <includes>
                                <include>**/I*SearchObject.java</include>
                                <include>**/*SearchObjectImpl.java</include>
                            </includes>
                            <followSymlinks>false</followSymlinks>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>ir.amv.os.vaseline.data.apis</groupId>
                <artifactId>vaseline-data-advanced-search-maven-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <id>generate-test-so</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>generate-so</goal>
                        </goals>
                        <configuration>
                            <srcFolder>src/main/java</srcFolder>
                            <srcEntitiesBasePackage>ir.amv.os.vaseline.data.jpa.spring.itest</srcEntitiesBasePackage>
                            <destFolder>src/main/java</destFolder>
                            <destSearchObjectsBasePackage>ir.amv.os.vaseline.data.jpa.spring.itest</destSearchObjectsBasePackage>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>