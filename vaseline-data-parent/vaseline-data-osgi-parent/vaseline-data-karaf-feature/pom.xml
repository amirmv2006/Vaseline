    <dependencies>
        <dependency>
            <groupId>com.github.amirmv2006.basics.osgi</groupId>
            <artifactId>vaseline-basics-karaf-feature</artifactId>
            <version>${project.version}</version>
            <classifier>features</classifier>
            <type>xml</type>
        </dependency>
        <dependency>
            <groupId>org.apache.aries.jpa</groupId>
            <artifactId>jpa-features</artifactId>
            <version>2.6.1</version>
            <classifier>features</classifier>
