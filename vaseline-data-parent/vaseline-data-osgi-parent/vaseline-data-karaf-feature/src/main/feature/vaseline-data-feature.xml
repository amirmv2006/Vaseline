<?xml version="1.0" encoding="UTF-8"?>
<features name="${project.artifactId}-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.0.0
http://karaf.apache.org/xmlns/features/v1.0.0 ">
    <repository>mvn:com.github.amirmv2006.basics.osgi/vaseline-basics-karaf-feature/${project.version}/xml/features</repository>
    <repository>mvn:org.apache.aries.jpa/jpa-features/2.6.1/xml/features</repository>
    <repository>mvn:org.hibernate/hibernate-osgi/${hibernate.version}/xml/karaf</repository>

    <!-- vaseline data api start -->
    <feature name="vaseline-basic-dao-api" version="${project.version}">
        <feature>aries-blueprint</feature>
        <feature>vaseline-core-api</feature>
        <bundle>mvn:com.github.amirmv2006.data.apis/vaseline-basic-dao-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-simple-search-dao-api" version="${project.version}">
        <feature>vaseline-reflection-util</feature>
        <feature>vaseline-basic-dao-api</feature>
        <bundle>mvn:com.github.amirmv2006.data.apis/vaseline-simple-search-dao-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-advanced-search-dao-api" version="${project.version}">
        <feature>vaseline-basic-dao-api</feature>
        <bundle>mvn:com.github.amirmv2006.data.apis/vaseline-advanced-search-dao-api/${project.version}</bundle>
    </feature>
    <!-- vaseline data api end -->

    <!-- vaseline data jpa api start -->
    <feature name="vaseline-jpa-basic-dao-api" version="${project.version}">
        <feature>vaseline-core-api</feature>
        <feature>vaseline-jdbc-api</feature>
        <feature>vaseline-basic-dao-api</feature>
        <bundle>mvn:com.github.amirmv2006.data.jpa/vaseline-jpa-basic-dao-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-jpa-simple-search-dao-api" version="${project.version}">
        <feature>vaseline-jpa-basic-dao-api</feature>
        <feature>vaseline-simple-search-dao-api</feature>
        <bundle>mvn:com.github.amirmv2006.data.jpa/vaseline-jpa-simple-search-dao-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-jpa-advanced-search-dao-api" version="${project.version}">
        <feature>vaseline-jpa-basic-dao-api</feature>
        <feature>vaseline-advanced-search-dao-api</feature>
        <bundle>mvn:com.github.amirmv2006.data.jpa/vaseline-jpa-advanced-search-dao-api/${project.version}</bundle>
    </feature>
    <feature name='${project.artifactId}-jpa' description='${project.name}' version='${project.version}'
             start-level="60">
        <details>${project.description} (JPA)</details>
        <!-- api beans -->
        <feature>vaseline-jpa-basic-dao-api</feature>
        <feature>vaseline-jpa-simple-search-dao-api</feature>
        <feature>vaseline-jpa-advanced-search-dao-api</feature>
    </feature>
    <!-- vaseline data jpa api end -->

    <!-- vaseline data hibernate api start -->
    <feature name="vaseline-hibernate-basic-dao-api" version="${project.version}">
        <feature version="${hibernate.version}">hibernate-orm</feature>
        <feature>vaseline-jdbc-api</feature>
        <feature>vaseline-entity-jpa-api</feature>
        <feature>vaseline-basic-dao-api</feature>
        <bundle>mvn:com.github.amirmv2006.data.hibernate/vaseline-hibernate-basic-dao-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-hibernate-simple-search-dao-api" version="${project.version}">
        <feature>vaseline-hibernate-basic-dao-api</feature>
        <feature>vaseline-simple-search-dao-api</feature>
        <bundle>mvn:com.github.amirmv2006.data.hibernate/vaseline-hibernate-simple-search-dao-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-hibernate-advanced-search-dao-api" version="${project.version}">
        <feature>vaseline-hibernate-basic-dao-api</feature>
        <feature>vaseline-advanced-search-dao-api</feature>
        <bundle>mvn:com.github.amirmv2006.data.hibernate/vaseline-hibernate-advanced-search-dao-api/${project.version}</bundle>
    </feature>
    <feature name='${project.artifactId}-hibernate' description='${project.name}' version='${project.version}'
             start-level="60">
        <details>${project.description} (Hibernate)</details>
        <!-- api beans -->
        <feature>vaseline-hibernate-basic-dao-api</feature>
        <feature>vaseline-hibernate-simple-search-dao-api</feature>
        <feature>vaseline-hibernate-advanced-search-dao-api</feature>
    </feature>
    <!-- vaseline data hibernate api end -->

</features>