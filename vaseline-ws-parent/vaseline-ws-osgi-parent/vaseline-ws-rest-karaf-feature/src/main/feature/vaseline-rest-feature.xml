    <feature name="vaseline-ws-rest-advanced-search-layerimpl-api" version="${project.version}">
        <feature>vaseline-ws-rest-advanced-search-layer-api</feature>
        <feature>vaseline-ws-rest-basic-layerimpl-api</feature>
        <feature>vaseline-ws-common-advanced-search-layerimpl-api</feature>
        <bundle>mvn:com.github.amirmv2006.ws.rest.api/vaseline-ws-rest-advanced-search-layerimpl-api/${project.version}</bundle>
    </feature>
    <!-- vaseline ws rest end -->

    <!-- vaseline ws rest impl start -->
    <feature name="vaseline-ws-rest-gson-extension" version="${project.version}">
        <feature>vaseline-ws-rest-basic-layer-api</feature>
        <feature>vaseline-json-api</feature>
        <bundle>mvn:${project.groupId}/vaseline-ws-rest-gson-extension-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-ws-rest-jersey" version="${project.version}">
        <feature>jax-rs-connector</feature>
        <feature>jax-rs-provider-gson</feature>
        <feature>vaseline-ws-rest-basic-layerimpl-api</feature>
        <feature>vaseline-ws-rest-simple-search-layerimpl-api</feature>
        <feature>vaseline-ws-rest-advanced-search-layerimpl-api</feature>
        <feature>vaseline-ws-rest-gson-extension</feature>
        <bundle>mvn:${project.groupId}/vaseline-ws-rest-jersey-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-ws-rest-secured" version="${project.version}">
        <feature>vaseline-security-authentication-spring-security</feature>
        <feature>jax-rs-provider-security</feature>
        <bundle>mvn:${project.groupId}/vaseline-ws-rest-secured-osgi/${project.version}</bundle>
    </feature>
    <!-- vaseline ws rest impl end -->

    <feature name='${project.artifactId}' description='${project.name}' version='${project.version}'>
        <details>${project.description}</details>
        <!-- api beans -->
        <feature>vaseline-ws-common-simple-search-layerimpl-api</feature>
        <feature>vaseline-ws-common-advanced-search-layerimpl-api</feature>
        <feature>vaseline-ws-rest-basic-layer-api</feature>

        <feature>vaseline-ws-rest-jersey</feature>
        <feature>vaseline-ws-rest-secured</feature>
    </feature>

</features>