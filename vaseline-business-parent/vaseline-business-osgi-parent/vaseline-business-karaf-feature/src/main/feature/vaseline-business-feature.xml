<?xml version="1.0" encoding="UTF-8"?>
<features name="${project.artifactId}-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.0.0
http://karaf.apache.org/xmlns/features/v1.0.0 ">
    <repository>mvn:com.github.amirmv2006.basics.osgi/vaseline-basics-karaf-feature/${project.version}/xml/features</repository>
    <repository>mvn:com.github.amirmv2006.data.osgi/vaseline-data-karaf-feature/${project.version}/xml/features</repository>

    <!-- vaseline business api start -->
    <feature name="vaseline-business-basic-layer-api" version="${project.version}">
        <feature>vaseline-core-api</feature>
        <feature>vaseline-basic-dao-api</feature>
        <bundle>mvn:com.github.amirmv2006.business.apis/vaseline-business-basic-layer-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-business-basic-layerimpl-api" version="${project.version}">
        <feature>transaction-api</feature>
        <feature>vaseline-business-basic-layer-api</feature>
        <bundle>mvn:com.github.amirmv2006.business.apis/vaseline-business-basic-layerimpl-api/${project.version}
        </bundle>
    </feature>
    <feature name="vaseline-business-simple-search-layer-api" version="${project.version}">
        <feature>vaseline-business-basic-layer-api</feature>
        <bundle>mvn:com.github.amirmv2006.business.apis/vaseline-business-simple-search-layer-api/${project.version}
        </bundle>
    </feature>
    <feature name="vaseline-business-simple-search-layerimpl-api" version="${project.version}">
        <feature>vaseline-business-basic-layerimpl-api</feature>
        <feature>vaseline-business-simple-search-layer-api</feature>
        <feature>vaseline-simple-search-dao-api</feature>
        <bundle>
            mvn:com.github.amirmv2006.business.apis/vaseline-business-simple-search-layerimpl-api/${project.version}
        </bundle>
    </feature>
    <feature name="vaseline-business-advanced-search-layer-api" version="${project.version}">
        <feature>vaseline-business-basic-layer-api</feature>
        <feature>vaseline-advanced-search-dao-api</feature>
        <bundle>mvn:com.github.amirmv2006.business.apis/vaseline-business-advanced-search-layer-api/${project.version}
        </bundle>
    </feature>
    <feature name="vaseline-business-advanced-search-layerimpl-api" version="${project.version}">
        <feature>vaseline-business-basic-layerimpl-api</feature>
        <feature>vaseline-business-advanced-search-layer-api</feature>
        <feature>vaseline-advanced-search-dao-api</feature>
        <bundle>
            mvn:com.github.amirmv2006.business.apis/vaseline-business-advanced-search-layerimpl-api/${project.version}
        </bundle>
    </feature>
    <feature name="vaseline-business-multidao-layer-api" version="${project.version}">
        <feature>vaseline-business-basic-layer-api</feature>
        <bundle>mvn:com.github.amirmv2006.business.apis/vaseline-business-multidao-layer-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-business-multidao-layerimpl-api" version="${project.version}">
        <feature>vaseline-business-basic-layerimpl-api</feature>
        <feature>vaseline-business-multidao-layer-api</feature>
        <bundle>mvn:com.github.amirmv2006.business.apis/vaseline-business-multidao-layerimpl-api/${project.version}
        </bundle>
    </feature>
    <!-- vaseline business api end -->
    <!-- vaseline business impl start-->
    <feature name="vaseline-business-executor" version="${project.version}">
        <feature>aries-proxy</feature>
        <feature>vaseline-business-basic-layerimpl-api</feature>
        <bundle>mvn:${project.groupId}/vaseline-business-executor-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-businesss-aries-tx" version="${project.version}">
        <feature>transaction</feature>
        <feature>vaseline-basics-logging-common</feature>
        <feature>vaseline-business-basic-layer-api</feature>
        <bundle>mvn:${project.groupId}/vaseline-businesss-aries-tx-osgi/${project.version}</bundle>
    </feature>
    <!-- vaseline business impl end-->
    <feature name='${project.artifactId}' description='${project.name}' version='${project.version}' start-level="70">
        <details>${project.description}</details>
        <!-- api beans -->
        <feature>vaseline-business-simple-search-layerimpl-api</feature>
        <feature>vaseline-business-advanced-search-layerimpl-api</feature>
        <feature>vaseline-business-multidao-layerimpl-api</feature>
        <feature>vaseline-business-executor</feature>
        <feature>vaseline-businesss-aries-tx</feature>
    </feature>

</features>