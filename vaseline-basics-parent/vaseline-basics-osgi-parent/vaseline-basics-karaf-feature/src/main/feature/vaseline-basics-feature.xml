<?xml version="1.0" encoding="UTF-8"?>
<features name="${project.artifactId}-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.0.0
http://karaf.apache.org/xmlns/features/v1.0.0 ">
    <repository>mvn:org.hibernate.validator/hibernate-validator-osgi-karaf-features/${org.hibernate.validator.version}/xml/features</repository>

    <feature name="vaseline-reflection-util" version="${project.version}">
        <bundle>mvn:com.github.amirmv2006.thirdparty/vaseline-reflection-util/${project.version}</bundle>
    </feature>
    <feature name="vaseline-i18n-api" version="${project.version}">
        <bundle>mvn:com.github.amirmv2006.basics.apis/vaseline-i18n-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-jdbc-api" version="${project.version}">
        <bundle>mvn:com.github.amirmv2006.basics.apis/vaseline-jdbc-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-json-api" version="${project.version}">
        <bundle>mvn:com.github.amirmv2006.basics.apis/vaseline-json-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-basics-logging-api" version="${project.version}">
        <bundle>mvn:com.github.amirmv2006.basics.apis/vaseline-basics-logging-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-basics-loggingimpl-api" version="${project.version}">
        <feature>vaseline-basics-logging-api</feature>
        <bundle>mvn:com.github.amirmv2006.basics.apis/vaseline-basics-loggingimpl-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-core-api" version="${project.version}">
        <feature>vaseline-reflection-util</feature>
        <feature>vaseline-i18n-api</feature>
        <bundle>mvn:javax.validation/validation-api/2.0.1.Final</bundle>
        <bundle>mvn:joda-time/joda-time/2.1</bundle>
        <bundle>mvn:com.github.amirmv2006.basics.apis/vaseline-core-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-entity-jpa-api" version="${project.version}">
        <feature>vaseline-core-api</feature>
        <bundle>mvn:com.github.amirmv2006.basics.apis/vaseline-entity-jpa-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-mapper-api" version="${project.version}">
        <feature>vaseline-core-api</feature>
        <bundle>mvn:com.github.amirmv2006.basics.apis/vaseline-mapper-api/${project.version}</bundle>
    </feature>
    <feature name="vaseline-validation-api" version="${project.version}">
        <feature>vaseline-core-api</feature>
        <bundle>mvn:com.github.amirmv2006.basics.apis/vaseline-validation-api/${project.version}</bundle>
    </feature>

    <!-- impl features -->
    <feature name="vaseline-basics-base-bundle" version="${project.version}">
        <bundle>mvn:${project.groupId}/vaseline-basics-base-bundle-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-basics-i18n" version="${project.version}">
        <feature>scr</feature>
        <feature>vaseline-i18n-api</feature>
        <bundle>mvn:${project.groupId}/vaseline-basics-i18n-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-basics-validation-hibernate-validator" version="${project.version}">
        <feature version="${org.hibernate.validator.version}">hibernate-validator</feature>
        <feature>vaseline-validation-api</feature>
        <bundle>mvn:javax.annotation/javax.annotation-api/1.2</bundle>
        <bundle>mvn:${project.groupId}/vaseline-basics-validation-hibernate-validator-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-basics-mapper-dozer" version="${project.version}">
        <feature>scr</feature>
        <feature>vaseline-mapper-api</feature>
        <bundle>mvn:org.apache.commons/commons-lang3/3.5</bundle>
        <bundle>mvn:commons-collections/commons-collections/3.2.2</bundle>
        <bundle>mvn:commons-beanutils/commons-beanutils/1.9.3</bundle>
        <bundle>mvn:com.github.dozermapper/dozer-core/6.1.0</bundle>
        <bundle>mvn:${project.groupId}/vaseline-basics-mapper-dozer-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-basics-logging-common" version="${project.version}" start-level="20">
        <feature>scr</feature>
        <feature>vaseline-basics-base-bundle</feature>
        <feature>vaseline-basics-loggingimpl-api</feature>
        <bundle>mvn:${project.groupId}/vaseline-basics-logging-common-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-logger-slf4j" version="${project.version}" start-level="10">
        <feature>scr</feature>
        <feature>vaseline-basics-base-bundle</feature>
        <feature>vaseline-basics-loggingimpl-api</feature>
        <bundle>mvn:${project.groupId}/vaseline-basics-logging-slf4j-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-basics-logging-log-service" version="${project.version}" start-level="10">
        <feature>scr</feature>
        <feature>vaseline-basics-base-bundle</feature>
        <feature>vaseline-basics-loggingimpl-api</feature>
        <bundle>mvn:${project.groupId}/vaseline-basics-logging-log-service-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-basics-logging-pax-logging" version="${project.version}" start-level="10">
        <feature>scr</feature>
        <feature>vaseline-basics-base-bundle</feature>
        <feature>vaseline-basics-loggingimpl-api</feature>
        <bundle>mvn:${project.groupId}/vaseline-basics-logging-pax-logging-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-core" version="${project.version}">
        <feature>scr</feature>
        <feature>vaseline-basics-base-bundle</feature>
        <feature>vaseline-core-api</feature>
        <bundle>mvn:${project.groupId}/vaseline-basics-core-osgi/${project.version}</bundle>
    </feature>
    <feature name="vaseline-json-gson" version="${project.version}">
        <feature>scr</feature>
        <feature>vaseline-basics-base-bundle</feature>
        <feature>vaseline-json-api</feature>
        <feature>vaseline-core-api</feature>
        <bundle>mvn:com.google.code.gson/gson/2.3.1</bundle>
        <bundle>mvn:${project.groupId}/vaseline-basics-json-gson-osgi/${project.version}</bundle>
    </feature>

    <feature name='${project.artifactId}' description='${project.name}' version='${project.version}'>
        <details>${project.description}</details>
        <!-- api beans -->
        <feature>vaseline-jdbc-api</feature>
        <feature>vaseline-entity-jpa-api</feature>

        <!--impl beans-->
        <feature>vaseline-basics-i18n</feature>
        <feature>vaseline-basics-mapper-dozer</feature>
        <feature>vaseline-basics-logging-pax-logging</feature>
        <feature>vaseline-basics-logging-common</feature>
        <feature>vaseline-core</feature>
        <feature>vaseline-json-gson</feature>
        <feature>vaseline-basics-validation-hibernate-validator</feature>
    </feature>

</features>