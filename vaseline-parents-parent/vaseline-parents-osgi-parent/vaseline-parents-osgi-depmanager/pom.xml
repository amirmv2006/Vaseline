<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>vaseline-parents-common-depmanager</artifactId>
        <groupId>com.github.amirmv2006.parents.common</groupId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../../vaseline-parents-common-parent/vaseline-parents-common-depmanager/pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.github.amirmv2006.parents.osgi</groupId>
    <artifactId>vaseline-parents-osgi-depmanager</artifactId>
    <packaging>pom</packaging>

    <properties>
        <!-- features version start -->
        <geronimo-jta_1.1_spec.version>1.1.1</geronimo-jta_1.1_spec.version>
        <minimal-json.version>0.9.2</minimal-json.version>
        <commons-collections.version>3.2.2</commons-collections.version>
        <commons-beanutils.version>1.9.3</commons-beanutils.version>
        <!-- features version end -->

        <org.osgi.core.version>6.0.0</org.osgi.core.version>
        <org.osgi.compendium.version>5.0.0</org.osgi.compendium.version>
        <org.osgi.service.log.version>1.3.0</org.osgi.service.log.version>
        <org.ops4j.pax.logging.version>1.10.1</org.ops4j.pax.logging.version>
        <karaf.version>4.2.3</karaf.version>
        <org.ops4j.pax.exam.version>4.13.1</org.ops4j.pax.exam.version>
        <org.apache.aries.proxy.api.version>1.1.0</org.apache.aries.proxy.api.version>
        <com.eclipsesource.jaxrs.provider-security.version>2.2</com.eclipsesource.jaxrs.provider-security.version>
        <com.eclipsesource.jaxrs.publisher.version>5.3</com.eclipsesource.jaxrs.publisher.version>
        <hibernate.version>5.2.17.Final</hibernate.version> <!-- Karaf-compatible -->
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.osgi</groupId>
                <artifactId>org.osgi.core</artifactId>
                <version>${org.osgi.core.version}</version>
            </dependency>
            <dependency>
                <groupId>org.osgi</groupId>
                <artifactId>org.osgi.compendium</artifactId>
                <version>${org.osgi.compendium.version}</version>
            </dependency>
            <dependency>
                <groupId>org.osgi</groupId>
                <artifactId>org.osgi.service.log</artifactId>
                <version>${org.osgi.service.log.version}</version>
            </dependency>
            <dependency>
                <groupId>org.ops4j.pax.logging</groupId>
                <artifactId>pax-logging-api</artifactId>
                <version>${org.ops4j.pax.logging.version}</version>
            </dependency>
            <!-- pax exam -->
            <dependency>
                <groupId>org.ops4j.pax.exam</groupId>
                <artifactId>pax-exam-container-karaf</artifactId>
                <version>${org.ops4j.pax.exam.version}</version>
            </dependency>
            <dependency>
                <groupId>org.ops4j.pax.exam</groupId>
                <artifactId>pax-exam-junit4</artifactId>
                <version>${org.ops4j.pax.exam.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.karaf</groupId>
                <artifactId>apache-karaf</artifactId>
                <type>zip</type>
                <version>${karaf.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.aries.proxy</groupId>
                <artifactId>org.apache.aries.proxy.api</artifactId>
                <version>${org.apache.aries.proxy.api.version}</version>
            </dependency>

            <dependency>
                <groupId>com.eclipsesource.jaxrs</groupId>
                <artifactId>provider-security</artifactId>
                <version>${com.eclipsesource.jaxrs.provider-security.version}</version>
            </dependency>
            <dependency>
                <groupId>com.eclipsesource.jaxrs</groupId>
                <artifactId>publisher</artifactId>
                <version>${com.eclipsesource.jaxrs.publisher.version}</version>
            </dependency>
            <dependency>
                <groupId>com.eclipsesource.jaxrs</groupId>
                <artifactId>consumer</artifactId>
                <version>${com.eclipsesource.jaxrs.publisher.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>